{
  "name": "reinhurd/fns-qr-receipt-api-bundle",
  "description": "Get info about QR receipt from FNS (Russian State Tax Service)",
  "type": "symfony-bundle",
  "require": {
    "php": ">=7.4",
    "symfony/framework-bundle": "^5.2"
  },
  "autoload": {
    "psr-4": {
      "Reinhurd\\FnsQrReceiptApiBundle\\": "src/"
    }
  },
  "scripts": {
    "test": "./vendor/bin/phpunit --bootstrap vendor/autoload.php src/Tests/",
    "testdox": "./vendor/bin/phpunit --bootstrap vendor/autoload.php --testdox --colors=always src/Tests/"
  },
  "license": "MIT",
  "authors": [
    {
      "name": "Mikhail Bozhenov",
      "email": "roarus@yandex.ru"
    }
  ],
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "symfony/test-pack": "^1.0",
    "squizlabs/php_codesniffer": "^3.6"
  }
}
